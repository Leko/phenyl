{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "ES6"
  },
  "exclude": ["node_modules"]
}
